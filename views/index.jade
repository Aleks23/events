extends layout

block content
  - if (email)
    h3 New event
    form(method='post', action='/add')
      label Event name
      input.span5(name='name', type='text', required)

      label Date and time
      input.span5(name='date', type='text', required)

      label Location
      input.span5(name='location', type='text', required)

      label Contact email
      input.span5(name='email', type='text', required)

      label Description
      textarea.span8(name='description', rows="4")
      br
      input.btn.btn-success(type='submit', value='Save')

  h3 Events
  - each e in events
    .card
      p= e.name
    .spacer

  .spacer
